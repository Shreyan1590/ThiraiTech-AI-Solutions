rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'admin@devnest.ai';
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    // Default to denying all access to prevent accidental data exposure
    match /{document=**} {
      allow read, write: if false;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      // Allow document creation only if the user is creating their own record
      allow create: if isOwner(userId);
      
      // Allow users to read and update their own profile information
      allow read, update: if isOwner(userId);

      // Allow the admin to read any user document for the dashboard
      allow read: if isAdmin();
    }
  }
}
